create database ifsp;

use ifsp;
create table tarefa(
id int,
descrição varchar (100) NOT NULL,
realizada boolean,
primary key (id)		
);

insert into tarefa 
Values (1, "Comprar carne moída", true);

insert into tarefa 
Values (2, "Limpar pia", false);

insert into tarefa 
Values (3, "Fazer lição de lógica 2", true);

Select * from tarefa;
