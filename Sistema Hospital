drop database médico_prova;

create database médico_prova;

use médico_prova;

create table Pacientes(
codigo int NOT NULL,
codigo_paciente int NOT NULL,
nome varchar (255) NOT NULL,
cpf char (36),
data_nascimento DATE,
primary key (codigo)
);

create table Consultas(
codigo int NOT NULL,
codigo_paciente int NOT NULL,
codigo_medicos int NOT NULL,
sala char (60) NOT NULL,
data_consulta DATETIME,
fim DATETIME,
primary key (codigo),
FOREIGN KEY (codigo_paciente) REFERENCES Pacientes(codigo)
);

create table Medicos(
codigo int NOT NULL,
codigo_medicos int NOT NULL,
codigo_paciente int NOT NULL,
nome varchar (255) NOT NULL,
especialidade varchar (255) NOT NULL,
primary key (codigo),
FOREIGN KEY (codigo_paciente) REFERENCES Pacientes(codigo)
);

insert into Pacientes
values (1, 1, 'Maria', '0833d838-f4e0-4545-8d2f-0e3f6698186a' , '2022-04-18');

insert into Consultas 
values (1, 1, 2, 30, '2022-04-25 17:30:00', '2022-04-25 18:00:00');

insert into Medicos 
values (1, 2, 1, 'Dra. Ana', 'pediatria');

SELECT * FROM Pacientes;
SELECT * FROM Medicos;
SELECT * FROM Consultas;
